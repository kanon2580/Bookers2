<h1>User info</h1>

<table class="table">
	<thead>
		<tr>
			<th><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %></th>
			<th colspan="1"></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>name</td>
			<td><%= user.name %></td>
		</tr>
		<tr>
			<td>introduction</td>
			<td><%= user.introduction %><td>
		</tr>
</table>

		<% if user_signed_in? && current_user.id == @user.id %>
			<%= link_to edit_user_path(current_user), class: "btn btn-default btn-block" do %>
				<span class="glyphicon glyphicon-wrench"></span>
			<% end %>
		<% end %>