<main>
	<div class="container">

		<div class="success">
			<div class="row">
				<% if flash[:user_updated] %>
					<%= flash[:user_updated] %>
				<% end %>
				<% if flash[:book_updated] %>
					<%= flash[:book_updated] %>
				<% end %>
			</div>
		</div>


		<div class="row">
			<div class="col-xs-3">
				<%= render 'users/sidebar', user:@user %>
				<%= render 'books/sidebar', book:@book %>
			</div>

			<div class="col-xs-9">
				<div class="Books">
					<h1>Books</h1>
					<table class="table table-hober">
						<thead>
							<tr>
								<th colspan="1"></th>
								<th>Title</th>
								<th>Opinion</th>
							</tr>
						</thead>
						<tbody>
							<% @books.each do |book| %>
								<tr>
									<td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: '50x50' %></td>
									<td><%= link_to book.title, book_path(book) %></td>
									<td><%= book.body %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>

		</div>

	</div>
</main>