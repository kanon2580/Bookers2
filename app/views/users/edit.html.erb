<main>

	<div class="container">
		<div class="row">
			<div class="col-lg-offset-3 col-lg-6">

				<div class="row">
					<h1>User info</h1>
				</div>

				<div class="row">
					<div class="error">
						<% if @user.errors.any? %>
								<h2><%= pluralize(@user.errors.count,"error") %>prohibited this book from being saved:</h2>
						<div class="col-lg-offset-1">
								<% @user.errors.full_messages.each do |message| %>
			        				<li><%= message %></li>
			      				<% end %>
			      		</div>
						<% end %>
					</div>
				</div>

				<%= form_for(@user) do |f|%>

					<div class="form-group row">
					<%= f.label :name %>
					<%= f.text_field :name, class: "form-control" %>
					</div>

					<div class="row">
					<%= f.label :image %>
					<%= f.attachment_field :profile_image %><br>
					</div>

					<div class="form-group row">
					<%= f.label :introduction %>
					<%= f.text_area :introduction, class: "form-control" %>
					</div>

					<div class="row">
					<%= f.submit "Update User", class: "btn btn-primary btn-block" %>
					</div>
				<% end %>

			</div>
		</div>
	</div>

</main>