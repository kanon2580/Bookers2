<main>

	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<%= render 'users/sidebar', user:@user %>
				<%= render 'books/sidebar', book:@book %>
			</div>

			<div class="col-xs-9">
				<div class="row">
					<h1>Users</h1>
				</div>

				<div class="row">
					<table class="table table-hober">
						<thead>
							<tr>
								<th>image</th>
								<th>name</th>
								<th colspan="1"></th>
							</tr>

							<% @users.each do |user| %>
								<tr>
									<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: "jpeg", fallback: "no_image.jpeg", size: "50x50" %></td>
									<td><%= user.name %></td>
									<td><%= link_to 'Show', user_path(user) %></td>
								</tr>
							<% end %>
						</thead>
					</table>
				</div>
			</div>

		</div>
	</div>

</main>