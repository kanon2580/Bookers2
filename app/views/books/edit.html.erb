<main>

	<div class="container">
		<div class="row">
			<div class="col-lg-offset-3 col-lg-6">

				<div class="row">
					<h1>Editing Book</h1>
				</div>

					<div class="row">
						<div class="error">
							<% if @book.errors.any? %>
									<h2><%= pluralize(@book.errors.count,"error") %>prohibited this book from being saved:</h2>
							<div class="col-lg-offset-1">
									<% @book.errors.full_messages.each do |message| %>
				        				<li><%= message %></li>
				      				<% end %>
				      		</div>
							<% end %>
						</div>
					</div>

					<%= form_for(@book) do |f| %>
						<div class="form-group row">
						<%= f.label :title %>
						<%= f.text_field :title, class: "form-control" %>
						</div>

						<div class="form-group row">
						<%= f.label :body %><br>
						<%= f.text_area :body, class: "form-control" %><br>
						</div>

						<div class="row">
						<%= f.submit 'Update Book', class: "btn btn-primary btn-block" %>
						</div>
					<% end %>

				<div class="row">
					<br>
					<p><%= link_to 'Show', @book %> | <%= link_to 'Back', books_path %></p>
				</div>

			</div>
		</div>
	</div>

</main>